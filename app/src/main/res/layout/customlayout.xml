<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp"
    android:orientation="vertical"
    android:background="#000"
    >

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="#ffc61e"
        app:cardCornerRadius="10dp"
        app:cardElevation="6dp"
        app:cardUseCompatPadding="true"
        app:contentPadding="5dp"


        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#000">

            <ImageView

                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewName"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/imageView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/imageView"
                android:layout_below="@+id/imageView"
                android:layout_marginTop="20dp"
                android:text="TextView"
                android:textColor="#ffc61e"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginTop="18dp"
                android:text="Branch    :"
                android:textColor="#ffc61e" />

            <TextView
                android:id="@+id/textViewbranch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView15"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@+id/imageView"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@+id/textView17"
                android:text="TextViewbranch"
                android:textColor="#ffc61e" />

            <TextView
                android:id="@+id/textView17"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView15"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/imageView"
                android:layout_toRightOf="@+id/imageView"
                android:text="Enroll No :"
                android:textColor="#ffc61e" />

            <TextView
                android:id="@+id/textViewenroll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/textView17"
                android:layout_alignBottom="@+id/textView17"
                android:layout_alignLeft="@+id/textViewbranch"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textViewbranch"
                android:text="TextViewenroll"
                android:textColor="#ffc61e" />

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView17"
                android:layout_alignStart="@+id/textView17"
                android:layout_below="@+id/textView17"
                android:layout_marginTop="14dp"
                android:layout_toLeftOf="@+id/textViewmobile"
                android:layout_toStartOf="@+id/textViewmobile"
                android:text="Mobile     :"
                android:textColor="#ffc61e" />

            <TextView
                android:id="@+id/textViewmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/textView19"
                android:layout_alignEnd="@+id/textViewenroll"
                android:layout_alignLeft="@+id/textViewenroll"
                android:layout_alignRight="@+id/textViewenroll"
                android:layout_alignStart="@+id/textViewenroll"
                android:layout_below="@+id/textViewenroll"
                android:layout_marginTop="15dp"
                android:text="TextViewmobile"
                android:textColor="#ffc61e" />

            <TextView
                android:id="@+id/textViewemail"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/textViewName"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignStart="@+id/textViewName"
                android:layout_below="@+id/textViewName"
                android:text="TextView"
                android:textColor="#ffc61e"
                android:textSize="20sp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>